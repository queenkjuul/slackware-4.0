# Remove any zoneinfo database found in the obsolete location:
( cd usr/lib ; rm -rf zoneinfo )
( cd usr/lib ; ln -sf /usr/share/zoneinfo zoneinfo )
# Add libc5 backwards link:
( cd var/lib/zoneinfo ; rm -rf localtime )
( cd var/lib/zoneinfo ; ln -sf /etc/localtime localtime )
# Add the default link in /etc, if none exists:
if [ ! -L etc/localtime ]; then
 ( cd etc ; rm -rf localtime )
 ( cd etc ; ln -sf ../usr/share/zoneinfo/Factory localtime )
fi
# Make the rest of the symbolic links in the zoneinfo database:
( cd usr/share/zoneinfo/Antarctica ; rm -rf South_Pole )
